[run]
branch = True
source = sanic
omit =
    site-packages
    sanic/__main__.py
    sanic/__init__.py
    sanic/__version__.py
    sanic/compat.py
    sanic/simple.py
    sanic/utils.py
    sanic/cli
    **/constants.py

[html]
directory = coverage

[report]
exclude_lines =
    no cov
    no qa
    noqa
    NOQA
    pragma: no cover
    TYPE_CHECKING
    import
omit =
    site-packages
    sanic/__main__.py
    sanic/__init__.py
    sanic/__version__.py
    sanic/compat.py
    sanic/simple.py
    sanic/utils.py
    sanic/cli
    **/constants.py
skip_empty = True
